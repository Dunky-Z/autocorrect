newline = ${ "\n" | "\r" }
space = ${ " "+ }

other = ${ !(string) ~ ANY }
comment = ${ 
  "//" ~ (!(newline) ~ ANY)*
  | "/*" ~ (!("*/") ~ ANY)* ~ "*/"
}

string = ${ 
  ("'" ~ (!("'") ~ ANY)* ~ "'") 
  | ("\"" ~ (!(newline | "\"") ~ ANY)* ~ "\"") 
  | ("`" ~ (!("`") ~ ANY)* ~ "`"+) 
}

regexp = ${
  ( "/" ~ (!(newline | "/") ~ ANY)* ~ "/" )
}

line = _{  string | comment | regexp | space | other | newline }
item = _{ SOI ~ line* ~ EOI } 